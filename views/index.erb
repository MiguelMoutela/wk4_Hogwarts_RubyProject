<div class="container">


  <table>
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>House</th>
      <th>Age</th>
    </tr>
    </thead>

    <tbody>
    <% @students.each do |student| %>

        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td class="house">
            <img src="<%= student.house.image_url %>"/>
            <p><%= student.house.name %></p>
          </td>
          <td><%= student.age %></td>
        </tr>

    <% end %>
    </tbody>
  </table>
</div>
